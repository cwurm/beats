{{ if ne .GOOS "windows" -}}
- module: system

  metricsets:
    - host
    - packages
    - process
    {{ if eq .GOOS "linux" -}}
    - socket
    - user
    {{- end }}

  state.period: 12h

  {{ if eq .GOOS "linux" -}}
  # When set to true, detects changes to password fields in
  # /etc/passwd and /etc/shadow.
  user.detect_password_changes: false
  {{- end }}

  report_changes: true
{{- end }}
